.container
  = form_for [:admin, @restaurant, @item] do |f|
    %ul
      - @item.errors.full_messages.each do |error|
        %li= error
    %p
      = f.label :title
      %br/
      = f.text_field :title
    %p
      = f.label :description
      %br/
      = f.text_area :description
    %p
      = f.label :price
      %br/
      = f.text_field :price
    %p
      = f.label :image
      %br/
      = f.file_field :image
    %p
      = f.submit
