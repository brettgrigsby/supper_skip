#myCarousel.carousel.slide{"data-ride" => "carousel"}
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
  .carousel-inner
    .item.active
      %img{:alt => "First slide", :src => "http://warnerboutique.com/wp-content/uploads/Bald-Eagle-Widescreen-Wallpaper.jpg"}
        .container
          .carousel-caption
            %h1= restaurant.name
            %h3= restaurant.description
            %p
              %a.btn.btn-lg.btn-primary{:href => "/menu", :role => "button"} View Our Menu
    .item
      %img{:alt => "Second slide", :src => "http://desktop.freewallpaper4.me/view/original/7015/sloth-.jpg"}
        .container
          .carousel-caption
            %h1 Sloth
            %h3 Slow cooked and so tender
            %p
              %a.btn.btn-lg.btn-primary{:href => "/items/9", :role => "button"} Learn more
    .item
      %img{:alt => "Third slide", :src => "http://mandogtruck.files.wordpress.com/2012/03/20-amazing-nature-full-hd-wallpapers-1080p.jpg"}
        .container
          .carousel-caption
            %h1 Polar Bear
            %h3 Because you haven't lived unless you've tried some.
            %p
              %a.btn.btn-lg.btn-primary{:href => "#", :role => "button"} Browse gallery
  %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-left
  %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-right
/ /.carousel
