.container
  .text-center
    .bg-success
      =flash[:success]
  %h3
    ="Hello, #{current_user.first_name.capitalize}!"
    %h3 Your Info
  .list-inline
    .text-center
      %h5= current_user.name
      %h5= current_user.email
.col-sm-6.col-md-3
  %br
  =link_to "Create A Restaurant", new_restaurant_path, class: "thumbnail-btn btn btn-primary"
-if current_user.roles.pluck("title").include?("cook")
  .row
  .col-md-offset-3
    .col-md-6
    %table.table
      %thead
      %tr.text-center
        %th Id
        %th Next State
        %th Current State
      -@orders.each do |order|
        %tr
          %td= "#{order.id} "
          %td= link_to("Begin Preparation ", cook_path(order), method: :put)
          %td= " #{order.current_state}"
    .col-md-3
