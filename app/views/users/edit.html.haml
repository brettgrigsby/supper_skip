.container
  .row.col-lg-6.col-lg-offset-3
    %h2.form-signin-heading Join Today.
    =form_for(@user, html: { class: 'form-signin' }) do |f|
      - if @user.errors.any?
        %ul#errors
          - @user.errors.full_messages.each do |error|
            %li= error
      .form-group
        = f.text_field :first_name, class: "form-control", value: @user.first_name
        %br/
        = f.text_field :last_name, class: "form-control", value: @user.last_name
        %br/
        = f.text_field :username, class: "form-control", placeholder: "username"
        %br/
        = f.text_field :email, class: "form-control", value: @user.email
        %br/
        = f.text_field :password, class: "form-control", placeholder: "password", type: "password"
        %br/
        = f.text_field :password_confirmation, class: "form-control", placeholder: "password confirmation", type: "password"
        %br/
        = f.submit "Update My Account", class: "btn btn-large btn-block btn-primary"

