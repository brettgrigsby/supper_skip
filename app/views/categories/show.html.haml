%br
.container
  .col-lg-12.col-lg-offset-0
    = link_to "Back", restaurant_path(@restaurant), class: "btn btn-md btn-primary"
%br
.container
  .col-lg-12.col-lg-offset-0
    - @restaurant.categories.each do |category|
      = link_to category.name, category, class: "btn btn-sm btn-primary"
.container
  %h1= @category.name
  .container
  -@category.items.each do |item|
    .col-sm-6.col-md-4
      .thumbnail
        %img{:src => "#{item.image_file_name}"}
        .caption
          %h3= link_to "#{item.title}", restaurant_item_path(item.restaurant_id, item)
          %p=truncate(item.description, :length => 45)
          %p $ #{item.price_for_humans}
          = button_to "Add to Cart", add_item_order_path(order, item_id: item.id), class: "btn btn-primary"
